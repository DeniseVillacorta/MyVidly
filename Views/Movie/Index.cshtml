@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
</p>
<h2>Movies</h2>
<p></p>
@Html.ActionLink("New Movie", "New", "Movie", null, new { @class = "btn btn-primary" })
<p></p>

@if (!Model.Any())
{
    <text>No movies available.</text>
}
else
{
    <table id="Movies" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th> Movie Name </th>
                <th> Genre </th>
                <th> Delete </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(movie.Name, "Edit", "Movie", new { id = movie.ID }, null)</td>
                    <td>@movie.Genre.GenreName</td>
                    <td> <button data-movie-id="@movie.ID" type="button" class="btn btn-link js-delete"> Delete </button></td>
                </tr>
            }
        </tbody>

    </table>
}
@section scripts
{
    <script>
        $(document).ready(function () {

            $("#Movies").DataTable();

            $("#Movies .js-delete").on("click", function () {
                var button = $(this);

                bootbox.confirm("Are you sure?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/API/Movies/DeleteMovie?id=" + button.attr("data-movie-id"),
                            method: "DELETE",
                            success: function () {
                                button.parent("tr").remove();
                                location.reload();
                            }
                        });
                    }
                })
            });
        });
    </script>
}
