@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p></p>
<p></p>
<h2> Movies </h2>

<table id="Movies" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th> Movie Name </th>
            <th> Genre </th>
        </tr>
    </thead>

    <tbody>
    </tbody>

</table>

@section scripts
{
    <script>
        $(document).ready(function () {

            $("#Movies").DataTable({
                ajax: {
                    url: "/API/Movies",
                    dataSrc: ""
                },

                columns: [
                    {
                        data: "name"
                    },
                    {
                        data: "genre.genreName"
                    }
                    
                ]
            });

        });

    </script>
}


