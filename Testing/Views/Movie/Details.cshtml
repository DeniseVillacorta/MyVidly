
@model Vidly.Models.Movie
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p></p>
<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.Genre.GenreName</li>
    <li>Released Date: @Model.ReleasedDate.ToShortDateString()</li>
    <li>Date Added: @Model.DateAdded.ToShortDateString()</li>
    <li>Number Of Stocks:  @Model.NumberOfStock</li>

</ul>